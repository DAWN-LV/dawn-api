{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",                                  
    "module": "CommonJS",  
    "lib": [
      "ES2020"
    ], 
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "types": [
    "node_modules/@types/*"
  ]
}
